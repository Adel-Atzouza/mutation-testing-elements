{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Schema tests",
        "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
        "args": [
          "-r",
          "source-map-support/register",
          "-u",
          "tdd",
          "--timeout",
          "999999",
          "--colors",
          "${workspaceFolder}/packages/mutation-testing-report-schema/dist/test/**/*.js"
        ],
        "internalConsoleOptions": "openOnSessionStart"
      },
      {
        "type": "node",
        "request": "launch",
        "name": "Integration tests (Mutation testing elements)",
        "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
        "args": [
          "-r",
          "source-map-support/register",
          "-r",
          "chromedriver",
          "-u",
          "tdd",
          "--timeout",
          "999999",
          "--colors",
          "${workspaceFolder}/packages/mutation-testing-elements/dist-test/test/integration/**/*.js"
        ],
        "internalConsoleOptions": "openOnSessionStart",
        "sourceMaps": true,
        "outFiles": [
          "${workspaceFolder}/packages/mutation-testing-elements/dist-test/**/*.js",
          "${workspaceFolder}/packages/mutation-testing-elements/dist/**/*.js"
        ]
      }
    ]
}